<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminDeliveryActivity"
    android:background="@drawable/background_tengah">

    <TextView
        android:id="@+id/confirm_admin_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Pengiriman"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:background="@drawable/input_design"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        />
    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner_admin_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        app:ms_arrowColor="@android:color/white"
        app:ms_arrowSize="18dp"
        app:ms_floatingLabelColor="@android:color/white"
        app:ms_floatingLabelText="Metode Transfer"
        android:layout_below="@+id/confirm_admin_delivery"
        app:ms_hint="Jasa Pengiriman"
        app:ms_hintColor="#fff"
        app:ms_alignLabels="false"
        app:ms_hintTextSize="18dp"
        app:ms_highlightColor="#fff"
        app:ms_baseColor="#fff"
        app:ms_multiline="false" />

    <EditText
        android:id="@+id/name_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_admin_delivery"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="No Resi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/input_design"
        android:maxLength="10"
        android:inputType="number"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="20dp"
        />

    <me.abhinay.input.CurrencyEditText
        android:id="@+id/ongkir"
        android:layout_below="@+id/name_delivery"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Ongkos Kirim "
        android:background="@drawable/input_design"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:inputType="number"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        />

    <Button
        android:id="@+id/confirm_admin_delivry_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:textColor="@android:color/white"
        android:text="Konfirmasi Pengiriman"
        android:background="@drawable/bg_buttons"
        android:textSize="17sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/truck"
        />
</RelativeLayout>