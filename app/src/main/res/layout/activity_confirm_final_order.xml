<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity"
    android:background="@drawable/background_tengah">


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Data Pemesanan"
        android:textSize="18dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:layout_margin="5dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/shippment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Nama Anda"
        android:maxLength="20"
        android:textStyle="bold"
        android:background="@drawable/input_design"
        android:textColor="#fff"
        android:padding="15dp"
        android:textColorHint="#fff"
        />

    <EditText
        android:id="@+id/shippment_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_name"
        android:inputType="number"
        android:background="@drawable/input_design"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:hint="Nomor Telepon Anda"
        android:maxLength="13"
        android:textColor="#fff"
        android:textColorHint="#fff"
        />

    <EditText
        android:id="@+id/shippment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_phone_number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:padding="15dp"
        android:background="@drawable/input_design"
        android:hint="Alamat Anda"
        android:textStyle="bold"
        android:maxLength="50"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:textColorHint="#fff"
        />

    <EditText
        android:id="@+id/shippment_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippment_address"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:padding="15dp"
        android:hint="Kota Anda"
        android:background="@drawable/input_design"
        android:textStyle="bold"
        android:maxLength="10"
        android:textColor="#fff"
        android:textColorHint="#fff"
        />
    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinnerDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp"
        app:ms_arrowColor="#02a9f3"
        app:ms_arrowSize="18dp"
        app:ms_floatingLabelColor="#02a9f3"
        app:ms_floatingLabelText="Jasa Pengiriman"
        android:layout_below="@+id/shippment_city"
        app:ms_hint="Jasa Pengiriman *"
        app:ms_hintColor="#02a9f3"
        app:ms_alignLabels="false"
        app:ms_hintTextSize="15dp"
        app:ms_highlightColor="#02a9f3"
        app:ms_baseColor="#02a9f3"
        app:ms_multiline="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDelivery"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="* Ongkir Ditanggung Penerima Saat Barang Sampai"
        android:textColor="#02a9f3"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/confirm_final_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_margin="27dp"
        android:text="Konfirmasi Pesanan"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_buttons"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/carttt"
        />

</RelativeLayout>