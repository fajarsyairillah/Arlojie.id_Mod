<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:padding="10dp"
        android:background="@drawable/bg_cardd">
    <TextView
        android:id="@+id/cart_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Nama Barang"
        android:textColor="#04aaf3"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/kategoriiii"
        />

     <TextView
        android:id="@+id/cart_product_quantity"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/quantity32"
        android:text="Jumlah Barang"
        android:textAlignment="viewEnd"
         android:textColor="#04aaf3"
        android:textSize="14dp"
        android:textStyle="bold"
         />

     <TextView
         android:id="@+id/cart_product_price"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Harga Barang"
         android:textColor="#04aaf3"
         android:textSize="14dp"
         android:textStyle="bold"
         android:layout_below="@id/cart_product_quantity"
         android:gravity="center"
         android:layout_marginTop="10dp"
         android:drawableTop="@drawable/indonesian_rupiah"
     />

    </RelativeLayout>

</androidx.cardview.widget.CardView>