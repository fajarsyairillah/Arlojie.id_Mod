<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp2"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arlojie_logo"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/app-slogan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="190dp"
        android:text="You May Delay, But Time Will Not!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/app-slogan2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="260dp"
        android:text="~Benjamin Franklin"
        android:textColor="#141515"
        android:textStyle="italic|bold"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_buttons"
        android:padding="19dp"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:text="Sudah Mempunyai Akun? Silahkan Login"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:drawableLeft="@drawable/login"
        />

    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_login_btn"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/bg_input"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="Daftar Sekarang"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:drawableLeft="@drawable/clipboard"
        />
</RelativeLayout>