<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:background="@drawable/background_tengah">

    <TextView
        android:id="@+id/aboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang Kami"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/bankAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rekening Bank a/n :"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#fafcff"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/bankAccount2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muhammad Ridho Al Fazri"
        android:textSize="18dp"
        android:layout_below="@+id/logo_Bank1"
        android:textStyle="bold"
        android:textColor="#131313"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/bank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bankAccount2"
        android:textColor="#043458"
        android:text="6610818763"
        android:textSize="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:id="@+id/logo_Bank1"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:src="@drawable/bca"
        android:layout_below="@+id/bankAccount"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/bank2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bankAccount4"
        android:textColor="#043458"
        android:text="1310011898765"
        android:textSize="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/bankAccount4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_Bank2"
        android:textColor="#0e0e0e"
        android:text="Muhammad Ridho Al Fazri"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:id="@+id/logo_Bank2"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:src="@drawable/mandiri"
        android:layout_below="@+id/bank1"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/bankAccount3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_Bank3"
        android:textColor="#0b0b0b"
        android:text="Fajar Syairillah"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/bank3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bankAccount3"
        android:textColor="#043458"
        android:text="0488536273"
        android:textSize="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:id="@+id/logo_Bank3"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:src="@drawable/bni"
        android:layout_below="@+id/bank2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="120dp"
        android:background="@android:color/transparent"
        />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#30a3f5"
        fab:menu_colorPressed="#2c93d7"
        fab:menu_colorRipple="#993a9af4"
        fab:menu_fab_label="Hubungi Kami"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/information"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#660e6fca"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            fab:fab_label="Telepon"
            fab:rippleColor="#5dbcff"
            fab:fab_progress_backgroundColor="@android:color/white"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whatsapp"
            fab:fab_label="Whatsapp"
            fab:rippleColor="#5dbcff"
            fab:fab_progress_backgroundColor="@android:color/white"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/instagram"
            fab:rippleColor="#5dbcff"
            fab:fab_label="Instagram"
            fab:fab_progress_backgroundColor="@android:color/white"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
